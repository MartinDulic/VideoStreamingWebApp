@using AdministrationModule.Models;
@using AdministrationModule.Pager;
@model IEnumerable<VMCountry>

@{
    ViewData["Title"] = "Index";
    MyPager pager = ViewBag.Pager;
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="page-links-container">

    <h4>Page: </h4>

    <div>
        @for(int pg = pager.StartPage; pg <= pager.EndPage; pg++)
        {
            <div class="page-link-div @(pg == pager.CurrentPage ? "active" : "")">
                <a class="page-link" asp-controller="Country" asp-action="Index" asp-route-page="@pg">@pg</a>
            </div>
        }
    </div>

</div>

